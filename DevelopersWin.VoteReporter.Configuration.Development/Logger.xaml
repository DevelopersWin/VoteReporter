<diagnostics:ConfiguringLoggerConfigurationFactory x:Class="DevelopersWin.VoteReporter.Configuration.Development.Logger"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:diagnostics="clr-namespace:DragonSpark.Diagnostics;assembly=DragonSpark"
	xmlns:diagnosticsPlatform="clr-namespace:DragonSpark.Windows.Diagnostics;assembly=DragonSpark.Windows"
	xmlns:enrichers="clr-namespace:Serilog.Enrichers;assembly=Serilog.FullNetFx"
	mc:Ignorable="d" 
>
	<diagnostics:MinimumLevelIsCommand />
	<diagnosticsPlatform:AddConsoleSinkCommand />
	<diagnosticsPlatform:AddTraceSinkCommand />

	<diagnosticsPlatform:AddSeqSinkCommand Endpoint="http://localhost:5341" ApiKey="FHDZFBUt1z34o0j6L1iE" />
	
	<diagnostics:EnrichCommand>
		<enrichers:ProcessIdEnricher />
		<enrichers:ThreadIdEnricher />
		<enrichers:MachineNameEnricher />
		<enrichers:EnvironmentUserNameEnricher />
	</diagnostics:EnrichCommand>
</diagnostics:ConfiguringLoggerConfigurationFactory>